{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true,
        "mocha": true
    },
    "extends": [
        "standard"
    ],
    "globals" : {
        "artifacts": false,
        "contract": false
    },
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "semi": [2, "always"],
        "max-len": [2, { "code": 100, "tabWidth": 2}]
    }
}
